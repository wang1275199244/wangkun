<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xd1810.dao.CommentDao">
    
    <insert id="addComment">
        insert into comment (gid,comment,uid)values(#{gid},#{comment},#{uid})
    </insert>
    
    <select id="getCommentsByGid" parameterType="Integer" resultType="com.xd1810.model.Comment">
        select * from comment where gid = #{gid}
    </select>
   
</mapper>