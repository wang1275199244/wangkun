<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xd1810.dao.UserDao">

    <select id="getUserByName" parameterType="String" resultType="com.xd1810.model.User">
        select * from user where name = #{name};
    </select>

    <select id="getUserByNameAndPass" parameterType="String" resultType="com.xd1810.model.User">
        select * from user where name = #{0} and pass = #{1};
    </select>

    <insert id="addUser">
        insert into user (name,pass,sex,money) values (#{name},#{pass},#{sex},#{money});
    </insert>
    <select id="getUserById" parameterType="Integer" resultType="com.xd1810.model.User">
        select * from user where id = #{id}
    </select>

    <update id="updateUser">
        update user set money=#{money} where id=#{id}
    </update>
</mapper>