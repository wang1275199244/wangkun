<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xd1810.dao.GoodDao">


    <insert id="addGood">
        insert into good (name,price,type,description,factory,state)values(#{name},#{price},#{type},#{description},#{factory},#{state})
    </insert>


    <update id="updateGood">
        update good set state=#{state} where id=#{id}"
    </update>


    <delete id="delGood">
        delete from good where id =#{id}
    </delete>


    <select id="getGoodsByState" resultType="com.xd1810.model.Good">
        select * from good where state = #{state}
    </select>


    <select id="getGoodById" parameterType="Integer" resultType="com.xd1810.model.Good">
        select * from good where id = #{id} and state = 1;
    </select>

    <select id="getAllGoods" resultType="com.xd1810.model.Good">
        select * from good;
    </select>


    <select id="getGoods" resultType="com.xd1810.model.Good">
        select * from good where name = #{name} and price = #{price} and type = #{type} and description = #{description} and factory = #{factory};
    </select>


    <select id="getGoodByLike" parameterType="String" resultType="com.xd1810.model.Good">
        select * from good where name like '%${value}%';
    </select>
</mapper>